---
layout: none
---
{%- assign future_events = "" | split: "" -%}
{%- capture nowunix -%}{{'now' | date: '%s'}}{%- endcapture -%}
{%- for post in site.events -%}
{%- capture posttime -%}{{post.start_date | date: '%s'}}{%- endcapture -%}
{%- if posttime > nowunix -%}

{%- assign future_events = future_events | push: post -%}
{%- endif -%}
{%- endfor -%}

BEGIN:VCALENDAR
VERSION:2.0
PRODID:http://www.example.com/
METHOD:PUBLISH
{% for event in future_events %}
BEGIN:VEVENT
UID:{{ event.start_date | date: "%Y%m%d" }}@gregariousmammal.com
ORGANIZER;CN="Organizer Name":MAILTO:chris@gregariousmammal.com
LOCATION:{{event.address}}
SUMMARY:{{ event.event }}
CLASS:PUBLIC
DTSTART:{{ event.start_date | date: "%Y%m%d" }}
DTEND:{{ event.end_date | date: "%Y%m%d" }}
DTSTAMP:{{ event.start_date | date: "%Y%m%d" }}
END:VEVENT
{% endfor %}
END:VCALENDAR
